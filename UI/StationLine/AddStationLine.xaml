<Window x:Class="UI.StationLine.AddStationLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.StationLine"
        mc:Ignorable="d"
        Title="AddStationLine" Height="450" Width="800">
    <Grid>
        <Button Content="Select stations" HorizontalAlignment="Left" Margin="186,275,0,0" VerticalAlignment="Top" Width="459" Height="40" RenderTransformOrigin="0.5,0.5" Click="Button_Click"/>

        <Label Content="Enter the number of stations on the line" HorizontalAlignment="Left" Margin="310,45,0,0" VerticalAlignment="Top" Width="225" Height="35"/>
        <TextBox x:Name="numberOfStationInTheLine" HorizontalAlignment="Left" Height="30" Margin="315,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205"/>

    </Grid>
</Window>
