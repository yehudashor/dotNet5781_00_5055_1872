<Window x:Class="UI.StationLine.AddStationLine1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.StationLine"
        mc:Ignorable="d"
        Title="AddStationLine1" Height="450" Width="800">
    <Grid>
        <Label Content="Select stations to the new line:" HorizontalAlignment="Left" Margin="295,31,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="235" Height="54">
        </Label>

        <Button Content="Add Bus" HorizontalAlignment="Left" Margin="140,365,0,0" VerticalAlignment="Top" Width="515" Height="45" Click="AddBus" RenderTransformOrigin="0.5,0.5">

        </Button>
        <Button Content="Add station" HorizontalAlignment="Left" Margin="305,250,0,0" VerticalAlignment="Top" Width="165" Height="55" Click="AddStation"/>
        <ListBox x:Name="Stationline" HorizontalAlignment="Left" Height="135" Margin="240,80,0,0" VerticalAlignment="Top" Width="305" />
        
        <TextBox x:Name="tb" Text="{Binding ElementName=Stationline, Path=SelectedItem}" HorizontalAlignment="Left" Height="25" Margin="75,90,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="60"/>

    </Grid>
</Window>
