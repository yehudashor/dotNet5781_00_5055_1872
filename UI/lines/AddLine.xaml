<Window x:Class="UI.lines.AddLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.lines"
        mc:Ignorable="d"
        Title="AddLine" Height="450" Width="800">
    <Grid>
        <Grid x:Name="AddLineData" VerticalAlignment="Top" Margin="0,10,0,0" HorizontalAlignment="Left" Width="280" Height="405">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" MinHeight="53.333"/>
                <RowDefinition Height="Auto" MinHeight="46"/>
                <RowDefinition Height="Auto" MinHeight="60"/>
                <RowDefinition Height="Auto" MinHeight="60.667"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label VerticalAlignment="Center" Grid.Row="0" Margin="3,3,0,17" HorizontalAlignment="Left" Grid.Column="0" Content="Area Bus Inter Urban:" Height="26" Width="123"/>
            <TextBox x:Name="areaBusInterUrbanTextBox" Width="120" VerticalAlignment="Center" Text="{Binding AreaBusInterUrban, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="0" Margin="3,4,0,18" Height="24" HorizontalAlignment="Left" Grid.Column="1"/>
            <Label VerticalAlignment="Center" Grid.Row="1" Margin="3,10,0,10" HorizontalAlignment="Left" Grid.Column="0" Content="Area Bus Urban:" Height="26" Width="95"/>
            <ComboBox x:Name="areaBusUrbanComboBox" Width="120" VerticalAlignment="Center" Grid.Row="1" Margin="3,12,0,12" ItemsSource="{Binding}" Height="22" HorizontalAlignment="Left" DisplayMemberPath="AreaBusUrban" Grid.Column="1">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>
            <Label VerticalAlignment="Center" Grid.Row="2" Margin="3,17,0,3" HorizontalAlignment="Left" Grid.Column="0" Content="Bus Line ID 1:" Height="26" Width="81"/>
            <TextBox x:Name="busLineID1TextBox" Width="120" VerticalAlignment="Center" Text="{Binding BusLineID1, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="2" Margin="3,18,0,4" Height="24" HorizontalAlignment="Left" Grid.Column="1"/>
            <Label VerticalAlignment="Center" Grid.Row="3" Margin="3,7,0,20.333" HorizontalAlignment="Left" Grid.Column="0" Content="First Station:" Height="26" Width="75"/>
            <TextBox x:Name="firstStationTextBox" Width="120" VerticalAlignment="Center" Text="{Binding FirstStation, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="3" Margin="3,8,0,21.333" Height="24" HorizontalAlignment="Left" Grid.Column="1"/>
            <Label VerticalAlignment="Center" Grid.Row="4" Margin="3,9.667,0,10.333" HorizontalAlignment="Left" Grid.Column="0" Content="Is Available 1:" Height="26" Width="81"/>
            <TextBox x:Name="isAvailable1TextBox" Width="120" VerticalAlignment="Center" Text="{Binding IsAvailable1, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="4" Margin="3,10.667,0,11.333" Height="24" HorizontalAlignment="Left" Grid.Column="1"/>
            <Label VerticalAlignment="Center" Grid.Row="5" Margin="3,19.667,0,15.667" HorizontalAlignment="Left" Grid.Column="0" Content="Last Station:" Height="26" Width="74"/>
            <TextBox x:Name="lastStationTextBox" Width="120" VerticalAlignment="Center" Text="{Binding LastStation, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="5" Margin="3,20.667,0,16.667" Height="24" HorizontalAlignment="Left" Grid.Column="1"/>
            <Label VerticalAlignment="Center" Grid.Row="6" Margin="3,12.333,0,23" HorizontalAlignment="Left" Grid.Column="0" Content="Line Number:" Height="26" Width="81"/>
            <TextBox x:Name="lineNumberTextBox" Width="120" VerticalAlignment="Center" Text="{Binding LineNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="6" Margin="3,13.333,0,24" Height="24" HorizontalAlignment="Left" Grid.Column="1"/>
            <Label VerticalAlignment="Center" Grid.Row="7" Margin="3,3,0,16.333" HorizontalAlignment="Left" Grid.Column="0" Content="Urban Inter Urban:" Height="26" Width="109"/>
            <TextBox x:Name="urbanInterUrbanTextBox" Width="120" VerticalAlignment="Center" Text="{Binding UrbanInterUrban, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="7" Margin="3,4,0,17.333" Height="24" HorizontalAlignment="Left" Grid.Column="1"/>
        </Grid>
        <Button Content="Add Station To Line" HorizontalAlignment="Left" Margin="275,0,-1.667,-4.333" VerticalAlignment="Top" Width="520" Height="425" Click="AddStation"/>
    </Grid>
</Window>
